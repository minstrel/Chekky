<div class="ui container">
  <%= render "newitem" %>
  <div class="ui top attached tabular menu">
    <a class="item active" data-tab="not_completed">To-Do</a>
    <a class="item" data-tab="completed">Recently Completed</a>
    <a class="item" data-tab="search">Search</a>
  </div>
  <div class="ui bottom attached tab segment" data-tab="not_completed" id="to-do">
  </div>
  <div class="ui bottom attached tab segment" data-tab="completed">
  </div>
  <div class="ui bottom attached tab segment" data-tab="search">
  </div>
</div>

<div class="ui small modal" id="confirm_delete">
  <div class="header">
    Really delete all completed items?
  </div>
  <div class="actions">
    <div class="ui approve compact green button">Yeah man</div>
    <div class="ui deny compact orange button">Whoa, no way!</div>
  </div>
</div>

<script type="text/javascript">
  $('.ui.small.modal#confirm_delete')
  .modal({
    onApprove : function () {
      $.get('/checklists/purge');
      $('.tabular.menu .item').tab('change tab', 'completed');
    }
    });
</script>
